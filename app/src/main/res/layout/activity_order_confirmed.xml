<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#003241"
    tools:context=".OrderConfirmedActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Confirmed"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/capriola"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track your orders in the Order Tab.\nThank u for shopping with us."
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/capriola" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/success_order" />

    <Button
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:text="Continue Shopping"
        android:textAllCaps="false"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/custom_botton"/>

</LinearLayout>